<PropertyList>
	
	<filter>
		<name>Fast Slow Indicator</name>
		<type>gain</type>
		<gain>-1.0</gain>
		<input>/instrumentation/airspeed-indicator/indicated-speed-kt</input>
		<reference>
			<condition>
				<equals>
					<property>/it-autoflight/mode/vert</property>
					<value>T/O CLB</value>
				</equals>
			</condition>
			<property>/it-autoflight/settings/togaspd</property>
		</reference>
		<reference>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/vert</property>
						<value>4</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/kts-mach-flch</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
			<expression>
				<product>
					<div>
						<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
						<property>/instrumentation/airspeed-indicator/indicated-mach</property>
					</div>
					<property>/it-autoflight/input/mach-flch</property>
				</product>
			</expression>
		</reference>
		<reference>
			<condition>
				<equals>
					<property>/it-autoflight/output/vert</property>
					<value>4</value>
				</equals>
			</condition>
			<property>/it-autoflight/input/kts-flch</property>
		</reference>
		<reference>
			<condition>
				<equals>
					<property>/it-autoflight/input/kts-mach</property>
					<value>1</value>
				</equals>
			</condition>
			<expression>
				<product>
					<div>
						<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
						<property>/instrumentation/airspeed-indicator/indicated-mach</property>
					</div>
					<property>/it-autoflight/input/mach</property>
				</product>
			</expression>
		</reference>
		<reference>/it-autoflight/input/kts</reference>
		<output>/instrumentation/pfd/fast-slow-raw</output>
		<min>-10</min>
		<max>10</max>
	</filter>
	
	<filter>
		<name>Fast Slow Indicator Lag</name>
		<type>exponential</type>
		<input>/instrumentation/pfd/fast-slow-raw</input>
		<output>/instrumentation/pfd/fast-slow</output>
		<filter-time>0.32</filter-time>
	</filter>
	
	<filter>
		<name>Slip/Skid Indicator</name>
		<debug>false</debug>
		<type>exponential</type>
		<input>
			<condition>
				<property>/fdm/jsbsim/position/wow</property>
			</condition>
			<expression>
				<product>
					<property>/fdm/jsbsim/accelerations/Ny</property>
					<value>-25</value>
				</product>
			</expression>
		</input>
		<input>/fdm/jsbsim/aero/beta-deg</input>
		<output>/instrumentation/pfd/slip-skid</output>
		<filter-time>0.16</filter-time>
	</filter>
	
	<filter>
		<name>Mach x1000 Indicator</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input> <!-- Fix when you add 3 digits to the ASI, right now only 2 -->
			<expression>
				<floor>
					<sum>
						<product>
							<property>/instrumentation/airspeed-indicator/indicated-mach</property>
							<value>100</value>
						</product>
						<value>0.5</value>
					</sum>
				</floor>
			</expression>
		</input>
		<output>/instrumentation/airspeed-indicator/indicated-mach-x1000</output>
	</filter>
	
	<filter>
		<name>NAV1 x100</name>
		<type>gain</type>
		<gain>100</gain>
		<input>instrumentation/nav[0]/frequencies/selected-mhz-fmt</input>
		<output>/instrumentation/nav[0]/frequencies/selected-mhz-fmt-x100</output>
	</filter>
	
	<filter>
		<name>NAV2 x100</name>
		<type>gain</type>
		<gain>100</gain>
		<input>instrumentation/nav[1]/frequencies/selected-mhz-fmt</input>
		<output>/instrumentation/nav[1]/frequencies/selected-mhz-fmt-x100</output>
	</filter>

</PropertyList>
