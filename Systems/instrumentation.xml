<PropertyList>
	
	<filter>
		<name>Fast Slow Indicator</name>
		<type>gain</type>
		<gain>-1.0</gain>
		<input>/instrumentation/airspeed-indicator/indicated-speed-kt</input>
		<reference>
			<condition>
				<equals>
					<property>/it-autoflight/mode/vert</property>
					<value>T/O CLB</value>
				</equals>
			</condition>
			<property>/it-autoflight/settings/togaspd</property>
		</reference>
		<reference>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/vert</property>
						<value>4</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/kts-mach-flch</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
			<expression>
				<product>
					<div>
						<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
						<property>/instrumentation/airspeed-indicator/indicated-mach</property>
					</div>
					<property>/it-autoflight/input/mach-flch</property>
				</product>
			</expression>
		</reference>
		<reference>
			<condition>
				<equals>
					<property>/it-autoflight/output/vert</property>
					<value>4</value>
				</equals>
			</condition>
			<property>/it-autoflight/input/kts-flch</property>
		</reference>
		<reference>
			<condition>
				<equals>
					<property>/it-autoflight/input/kts-mach</property>
					<value>1</value>
				</equals>
			</condition>
			<expression>
				<product>
					<div>
						<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
						<property>/instrumentation/airspeed-indicator/indicated-mach</property>
					</div>
					<property>/it-autoflight/input/mach</property>
				</product>
			</expression>
		</reference>
		<reference>/it-autoflight/input/kts</reference>
		<output>/instrumentation/pfd/fast-slow-raw</output>
		<min>-10</min>
		<max>10</max>
	</filter>
	
	<filter>
		<name>Fast Slow Indicator Lag</name>
		<type>exponential</type>
		<input>/instrumentation/pfd/fast-slow-raw</input>
		<output>/instrumentation/pfd/fast-slow</output>
		<filter-time>0.32</filter-time>
	</filter>
	
	<filter>
		<name>Slip/Skid Indicator</name>
		<debug>false</debug>
		<type>exponential</type>
		<input>
			<condition>
				<property>/fdm/jsbsim/position/wow</property>
			</condition>
			<expression>
				<product>
					<property>/fdm/jsbsim/accelerations/Ny</property>
					<value>-25</value>
				</product>
			</expression>
		</input>
		<input>/fdm/jsbsim/aero/beta-deg</input>
		<output>/instrumentation/pfd/slip-skid</output>
		<filter-time>0.16</filter-time>
	</filter>
	
	<filter>
		<name>Mach x1000 Indicator</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input> <!-- Fix when you add 3 digits to the ASI, right now only 2 -->
			<expression>
				<floor>
					<sum>
						<product>
							<property>/instrumentation/airspeed-indicator/indicated-mach</property>
							<value>100</value>
						</product>
						<value>0.5</value>
					</sum>
				</floor>
			</expression>
		</input>
		<output>/instrumentation/airspeed-indicator/indicated-mach-x1000</output>
	</filter>
	
	<filter>
		<name>NAV1 x100</name>
		<type>gain</type>
		<gain>100</gain>
		<input>instrumentation/nav[0]/frequencies/selected-mhz-fmt</input>
		<output>/instrumentation/nav[0]/frequencies/selected-mhz-fmt-x100</output>
	</filter>
	
	<filter>
		<name>NAV2 x100</name>
		<type>gain</type>
		<gain>100</gain>
		<input>instrumentation/nav[1]/frequencies/selected-mhz-fmt</input>
		<output>/instrumentation/nav[1]/frequencies/selected-mhz-fmt-x100</output>
	</filter>
	
	<!-- RMI -->
	<filter>
		<name>RMI 1 Heading</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<greater-than-equals>
					<property>/systems/electrical/bus/dc-l</property>
					<value>25</value>
				</greater-than-equals>
			</condition>
		</enable>
		<input>/orientation/heading-magnetic-deg</input>
		<output>/instrumentation/rmi[0]/heading</output>
	</filter>
	
	<filter>
		<name>RMI 1 Needle 1</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<less-than>
					<property>/systems/electrical/bus/dc-l</property>
					<value>25</value>
				</less-than>
			</condition>
			<value>0</value>
		</input>
		<input>
			<condition>
				<property>/instrumentation/rmi[0]/vor-adf-1</property>
			</condition>
			<property>/instrumentation/nav[0]/heading-deg</property>
			<offset>
				<property>/orientation/heading-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>/instrumentation/adf[0]/indicated-bearing-deg</input>
		<output>/instrumentation/rmi[0]/needle-1</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>RMI 1 Needle 2</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<less-than>
					<property>/systems/electrical/bus/dc-l</property>
					<value>25</value>
				</less-than>
			</condition>
			<value>0</value>
		</input>
		<input>
			<condition>
				<property>/instrumentation/rmi[0]/vor-adf-2</property>
			</condition>
			<property>/instrumentation/nav[1]/heading-deg</property>
			<offset>
				<property>/orientation/heading-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>/instrumentation/adf[1]/indicated-bearing-deg</input>
		<output>/instrumentation/rmi[0]/needle-2</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>RMI 1 Heading</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<greater-than-equals>
					<property>/systems/electrical/bus/dc-r</property>
					<value>25</value>
				</greater-than-equals>
			</condition>
		</enable>
		<input>/orientation/heading-magnetic-deg</input>
		<output>/instrumentation/rmi[1]/heading</output>
	</filter>
	
	<filter>
		<name>RMI 1 Needle 1</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<less-than>
					<property>/systems/electrical/bus/dc-r</property>
					<value>25</value>
				</less-than>
			</condition>
			<value>0</value>
		</input>
		<input>
			<condition>
				<property>/instrumentation/rmi[1]/vor-adf-1</property>
			</condition>
			<property>/instrumentation/nav[0]/heading-deg</property>
			<offset>
				<property>/orientation/heading-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>/instrumentation/adf[0]/indicated-bearing-deg</input>
		<output>/instrumentation/rmi[1]/needle-1</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>RMI 1 Needle 2</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<less-than>
					<property>/systems/electrical/bus/dc-r</property>
