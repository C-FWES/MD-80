	</filter>
	
	<!-- ND DME -->
	<filter>
		<name>ND 1 VOR ADF 1</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/rmi[0]/vor-adf-1</property>
			</condition>
			<value>1</value>
		</input>
		<input>-1</input>
		<output>/instrumentation/efis[0]/inputs/lh-vor-adf</output>
	</filter>
	
