<PropertyList>
	
	<filter>
		<name>KTS INPUT FILTER</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>/it-autoflight/input/spd-kts</input>
		<output>/it-autoflight/internal/kts</output>
		<max-rate-of-change>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/kts-mach</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>10</value>
		</max-rate-of-change>
		<max-rate-of-change>200</max-rate-of-change>
	</filter>
	
	<filter>
		<name>MACH INPUT FILTER</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>/it-autoflight/input/spd-mach</input>
		<output>/it-autoflight/internal/mach</output>
		<max-rate-of-change>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/kts-mach</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>0.1</value>
		</max-rate-of-change>
		<max-rate-of-change>2</max-rate-of-change>
	</filter>
	
	<pid-controller>
		<name>IT-CONTROLLER: IAS THRUST</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/kts-mach</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/instrumentation/airspeed-indicator/indicated-speed-kt</input>
		<reference>/it-autoflight/internal/kts</reference>
		<output>/fdm/jsbsim/engine/ats-cmd-raw-pid</output>
		<config>
			<Kp>0.055</Kp>
			<Ti>9.0</Ti>
			<Td>0.00001</Td>
			<u_min>0.15</u_min> <!-- Should be idle limit -->
			<u_max>/fdm/jsbsim/engine/limit/active-norm</u_max>
		</config>
	</pid-controller>
	
	<pid-controller>
		<name>IT-CONTROLLER: MACH THRUST</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/kts-mach</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/instrumentation/airspeed-indicator/indicated-mach</property>
			<scale>1000.0</scale>
		</input>
		<reference>
			<property>/it-autoflight/internal/mach</property>
			<scale>1000.0</scale>
		</reference>
		<output>/fdm/jsbsim/engine/ats-cmd-raw-pid</output>
		<config>
			<Kp>0.055</Kp>
			<Ti>9.0</Ti>
			<Td>0.00001</Td>
			<u_min>0.15</u_min> <!-- Should be idle limit -->
			<u_max>/fdm/jsbsim/engine/limit/active-norm</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>Speed/Mach Filter</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/ats-cmd-raw-pid</input>
		<output>/fdm/jsbsim/engine/ats-cmd-raw</output>
		<max-rate-of-change>0.3</max-rate-of-change>
	</filter>
	
	<filter>
		<name>IDLE</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<condition>
				<equals>
					<property>/it-autoflight/mode/thr</property>
					<value>RETARD</value>
				</equals>
			</condition>
			<value>0</value>
		</input>
		<input>0.15</input> <!-- Should be idle limit -->
		<output>/fdm/jsbsim/engine/ats-cmd-raw</output>
	</filter>
	
	<filter>
		<name>THR LIM</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>2</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/limit/active-norm</input>
		<output>/fdm/jsbsim/engine/ats-cmd-raw</output>
	</filter>
	
	<filter>
		<name>Power Comparator</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression> <!-- EPR non-linearity makes it hard -->
				<max>
					<table>
						<property>/engines/engine[0]/n1-actual</property>
						<entry><ind> 25.3</ind><dep>0</dep></entry>
						<entry><ind>105.2</ind><dep>1</dep></entry>
					</table>
					<table>
						<property>/engines/engine[1]/n1-actual</property>
						<entry><ind> 25.3</ind><dep>0</dep></entry>
						<entry><ind>105.2</ind><dep>1</dep></entry>
					</table>
				</max>
			</expression>
		</input>
		<output>/fdm/jsbsim/engine/power-compare-max-norm</output>
	</filter>
	
	<pid-controller>
		<name>IT-CONTROLLER: ATS Control</name> <!-- Simulates EPR "hunting" -->
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/power-compare-max-norm</input>
		<reference>/fdm/jsbsim/engine/ats-cmd-raw</reference>
		<output>/fdm/jsbsim/engine/ats-cmd</output>
		<config>
			<Kp>1.2</Kp>
			<Ti>0.6</Ti>
			<Td>0.0</Td>
			<u_min>
				<expression>
					<max>
						<difference>
							<property>/fdm/jsbsim/engine/power-compare-max-norm</property>
							<value>0.1</value>
						</difference>
						<value>0</value>
					</max>
				</expression>
			</u_min>
			<u_max>
				<expression>
					<min>
						<sum>
							<property>/fdm/jsbsim/engine/power-compare-max-norm</property>
							<value>0.1</value>
						</sum>
						<value>1</value>
					</min>
				</expression>
			</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>Throttle Comparator</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<max>
					<property>/fdm/jsbsim/engine/throttle-lever[0]</property>
					<property>/fdm/jsbsim/engine/throttle-lever[1]</property>
				</max>
			</expression>
		</input>
		<output>/fdm/jsbsim/engine/throttle-compare-max</output>
	</filter>
	
	<filter>
		<name>Thrust CMD Backdrive</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<or>
					<not-equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</not-equals>
					<not-equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</not-equals>
				</or>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/throttle-compare-max</input>
		<output>/fdm/jsbsim/engine/ats-cmd</output>
		<output>/fdm/jsbsim/engine/ats-cmd-raw</output>
	</filter>
	
	<!-- Engine 1 -->
