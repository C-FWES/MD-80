		<name>Thrust Filter 1</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<input>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<property>/fdm/jsbsim/engine/ats-cmd</property>
		</input>
		<input>/fdm/jsbsim/engine/throttle-lever[0]</input>
		<output>/fdm/jsbsim/engine/ats-cmd-1</output>
		<max-rate-of-change>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>0.3</value>
		</max-rate-of-change>
		<max-rate-of-change>100</max-rate-of-change>
	</filter>
	
	<filter>
		<name>Throttle Backdrive 1</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/ats-cmd-1</input>
		<output>/controls/engines/engine[0]/throttle</output>
	</filter>
	
	<!-- Engine 2 -->
	<filter>
		<name>Thrust Filter 2</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<input>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<property>/fdm/jsbsim/engine/ats-cmd</property>
		</input>
		<input>/fdm/jsbsim/engine/throttle-lever[1]</input>
		<output>/fdm/jsbsim/engine/ats-cmd-2</output>
		<max-rate-of-change>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>0.3</value>
		</max-rate-of-change>
		<max-rate-of-change>100</max-rate-of-change>
	</filter>
	
	<filter>
		<name>Throttle Backdrive 2</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/clamp</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/ats-cmd-2</input>
		<output>/controls/engines/engine[1]/throttle</output>
	</filter>

</PropertyList>
