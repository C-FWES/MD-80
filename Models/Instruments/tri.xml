<PropertyList>
	
	<path>tri.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>tri</object-name>
		<emission>
			<red>0.3</red>
			<green>0.3</green>
			<blue>0.3</blue>
		</emission>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>toBtn</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>fdm/jsbsim/engine/limit/active-mode-int</property>
				<value>0</value>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>gaBtn</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>fdm/jsbsim/engine/limit/active-mode-int</property>
				<value>1</value>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>clBtn</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>fdm/jsbsim/engine/limit/active-mode-int</property>
				<value>3</value>
			</binding>
		</action>
	</animation>

</PropertyList>
