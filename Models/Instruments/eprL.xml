<PropertyList>
	
	<path>epr.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>Needle</object-name>
		<object-name>eprLimit</object-name>
		<object-name>eprDigits</object-name>
		<emission>
			<red>0.3</red>
			<green>0.3</green>
			<blue>0.3</blue>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle</object-name>
		<property>engines/engine[0]/epr-actual</property>
		<interpolation>
			<entry><ind>0.8</ind><dep>  0</dep></entry>
			<entry><ind>2.5</ind><dep>255</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>eprLimit</object-name>
		<property>fdm/jsbsim/engine/limit/active-ind</property>
		<interpolation>
			<entry><ind>0.8</ind><dep>  0</dep></entry>
			<entry><ind>2.5</ind><dep>255</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>epr1</object-name>
		<property>fdm/jsbsim/engine/gauge/epr-actual-1-d100</property>
		<factor>0.0695</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>epr2</object-name>
		<property>fdm/jsbsim/engine/gauge/epr-actual-1-d10</property>
		<factor>0.0695</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>epr3</object-name>
		<property>fdm/jsbsim/engine/gauge/epr-actual-1-d1</property>
		<factor>0.0695</factor>
		<step>0.01</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList>
