<PropertyList>
	
	<path>asi.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>Needle.kts</object-name>
		<object-name>Needle.vmo</object-name>
		<object-name>Mach1</object-name>
		<object-name>Mach2</object-name>
		<object-name>Mach3</object-name>
		<emission>
			<red>1.0</red>
			<green>0.4</green>
			<blue>0.1</blue>
			<factor-prop>controls/lighting/main-integ-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle.kts</object-name>
		<property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
		<interpolation>
			<entry><ind> 42</ind><dep> -6.00</dep></entry>
			<entry><ind> 60</ind><dep>  4.00</dep></entry>
			<entry><ind> 70</ind><dep>  9.53</dep></entry>
			<entry><ind>250</ind><dep>234.00</dep></entry>
			<entry><ind>450</ind><dep>314.00</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle.vmo</object-name>
		<property>fdm/jsbsim/dfgs/speeds/vmo-mmo</property>
		<interpolation>
			<entry><ind> 42</ind><dep> -6.00</dep></entry>
			<entry><ind> 60</ind><dep>  4.00</dep></entry>
			<entry><ind> 70</ind><dep>  9.53</dep></entry>
			<entry><ind>250</ind><dep>234.00</dep></entry>
			<entry><ind>450</ind><dep>314.00</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
